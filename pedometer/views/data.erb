<link href="/styles.css" rel="stylesheet" type="text/css" />

<html>
  <table>
    <tr>
        <td>
          <table class="data">
            <th>User</th>
            <th>File</th>
            <th>Steps</th>
            <% @data.each do |file, steps| %>
              <% url = "detail/" + file %>
              <tr>
                <td><%= file.split('/')[2] %></td>
                <td><a href=<%= url %>><%= file.split('/')[3] %></a></td>
                <td><%= steps %></td>
              </tr>
            <% end %>
          </table>
        </td>
        <td class="compare">
            <% @pairs.each do |file_1, file_2| %>
                <div>
                    <% url = "/data/compare/" + file_1 + "/and/" + file_2 %>
                    <a href=<%= url %>> Compare</a> <%= file_1 %> and <%= file_2 %>
                </div>
            <% end %>
        </td>
    </tr>
  </table>  
</html>